<div>

  <h4>Please enter the requested details and click submit:</h4>

  <div class = "padding">
    <form  method = "post" action = "post_info">
      <table>
        <tr>
          <td class= "wide"><b>Name: </b></td>
          <td class= "wide"><input type = "text" name = "user[user_name]" required></td>
        </tr>
        <tr>
          <td class= "wide"><b>Age: </b></td>
          <td class= "wide"><input type = "text" name = "user[user_age]" required></td>
        </tr>
        <tr>
          <td class= "wide"><b>Favorite Number 1: </b></td>
          <td class= "wide"><input type = "text" name = "user[num_1]" required></td>
        </tr>
        <tr>
          <td class= "wide"><b>Favorite Number 2: </b></td>
          <td class= "wide"><input type = "text" name = "user[num_2]" required></td>
        </tr>
        <tr>
          <td class= "wide"><b>Favorite Number 3: </b></td>
          <td class= "wide"><input type = "text" name = "user[num_3]" required></td>
        </tr>
      </table>
      <div class = "button">
        <input class="button-color" type = "submit">
      </div>
    </form>
  </div>

  <hr>

  <!-- only populated if user already in JSON file -->
  <div class="feedback">
    <p><i><%= feedback %></i></p>
  </div>

</div>